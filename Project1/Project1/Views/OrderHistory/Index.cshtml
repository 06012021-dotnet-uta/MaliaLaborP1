@model IEnumerable<Project1.Models.OrderHistoryViewModel>

@{
    ViewData["Title"] = "Store Order History";
}

<div class="text-center">
    <h1 class="display-4">Store Order History</h1>
    <p>Select a store to see the order history.</p>
</div>

<div>
    <form >
        <label for="stores">Choose a Store:</label>
        <select name="id" id="id">
            @foreach (var item in Model)
            {
                <option value="@item.storeVm.Id">@Html.DisplayFor(model => item.storeVm.City)</option>
            }
        </select>
        <input type="submit"asp-controller="OrderHistory" asp-action="Details" value="See History"/>
    </form>
</div>
