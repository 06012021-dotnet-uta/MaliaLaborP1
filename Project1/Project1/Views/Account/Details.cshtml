@using Microsoft.AspNetCore.Http;

@model Project1.Models.CustomerViewModel

@{
    ViewData["Title"] = "Account Details";
}

<div class="text-center">
    @if (Model != null)
    {
        <h1 class="display-2">Welcome!</h1>
    }
    else
    {
        <h1>No order history for customer.</h1>
    }
</div>

<div class="d-flex flex-row">
    <div>
        @if (Model != null)
        {
            <h3 class="text-center">Account Details</h3>
            <h4>@Html.DisplayNameFor(model => model.customerVm.Username)</h4>
            <p>@Html.DisplayFor(model => Model.customerVm.Username)</p>
            <h4>@Html.DisplayNameFor(model => model.customerVm.FirstName)</h4>
            <p>@Html.DisplayFor(model => Model.customerVm.FirstName)</p>
            <h4>@Html.DisplayNameFor(model => model.customerVm.LastName)</h4>
            <p>@Html.DisplayFor(model => Model.customerVm.LastName)</p>
        }
        else
        {
            <h1>No information on customer.</h1>
        }
    </div>
</div>

<div>
    <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="History">Order History</a>
</div>