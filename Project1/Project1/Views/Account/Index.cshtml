@model Project1DbContext.Customer

@{
    ViewData["Title"] = "User Login";
}

<div class="text-center">
    <h1 class="display-4">Login screen</h1>
    <p>Put some kind of login box here</p>
</div>
<div class="col-6">
    <div>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Create">New user? Create an account!</a>
        </div>
    </div>
</div>
<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Create">Create new user</a>
<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Delete">Delete user</a>
<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Details">View account details</a>
